<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p id= "author">
  <b>By:</b>
  <%= @post.author.email %>
</p>

<p id= "status">
    <b>Status:</b>
    <%= @post.published? ? "Published" : "Unpublished" %>
  </p>

<h2>Comments</h2>
<%= render@post.comments %>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
